<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/homeColor"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nox.finzone.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:weightSum="1">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_gravity="center"
            android:src="@drawable/image3373"
            android:id="@+id/imageView"
            android:layout_weight="0.17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:textColor="@color/redColor"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/linear_design_1"
            android:layout_height="wrap_content">


            <ImageView
                android:src="@drawable/ic_person"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#00000000"
                android:paddingLeft="2dp"
                android:hint="Email Address"
                android:lines="1"
                android:textAlignment="center"
                android:textColor="@color/com_facebook_button_background_color_disabled"
                android:textColorHint="@color/com_facebook_button_background_color_disabled"
                android:id="@+id/username"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/linear_design_1"
            android:layout_height="wrap_content">
         <ImageView
                android:src="@drawable/ic_lock_outline_black_24dp"
                android:layout_width="30dp"
                android:layout_height="match_parent"
         />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:inputType="textPassword"
             android:paddingLeft="2dp"
             android:hint="Password"
             android:lines="1"
             android:textAlignment="center"
             android:textColor="@color/com_facebook_button_background_color_disabled"
             android:textColorHint="@color/com_facebook_button_background_color_disabled"
             android:background="#00000000"
             android:id="@+id/password"
             />

        </LinearLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/form_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleColor="#ff0000"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleRoundedCorners="10dp"
            app:mrl_rippleInAdapter="false"
            app:mrl_rippleDuration="350"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleBackground="#FFFFFF"
            app:mrl_ripplePersistent="true">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D24958"
            android:textColor="@color/com_facebook_button_background_color_focused"
            android:textStyle="bold"
            android:text="Log In"


            />
        </com.balysv.materialripple.MaterialRippleLayout>

        <RelativeLayout
            android:tag="divider"
            android:layout_width="250dp"
            android:background="@color/com_facebook_button_background_color_disabled"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:layout_height="1dp"/>
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="18dp"
            />


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
           />


    </LinearLayout>


</LinearLayout>
