<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"

android:background="@drawable/design_layout_1"
    android:padding="8dp"
    android:elevation="15dp"
android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightgreenColor"
                android:background="@drawable/ic_alarm_on_black_24dp"/>
            <TextView
                android:text="Date:"
                android:padding="3dp"
                android:textStyle="italic"
                android:textColor="@color/lightgreenColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loan_takendate"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"


            android:layout_weight="1"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/lightgreenColor"
                android:background="@drawable/ic_alarm_black_24dp"/>

            <TextView
                android:id="@+id/loan_expiry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:text="Expiry:"
                android:textColor="@color/lightgreenColor"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/loan_amount"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Amount taken : "
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20dp"
        android:textStyle="bold" />




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_height="0dp"
        android:layout_weight="1">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorBlue"
        android:layout_gravity="left"
        android:text="Interest Rate:"
        android:textAllCaps="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loan_rate"
        />

    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorBlue"
        android:text="Downpayment :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="20dp"
        android:id="@+id/loan_days_left"
        android:textAllCaps="true"

        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="0dp"
        android:layout_weight="1">
  <!--  <Button
        android:text="Pay Limited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pay_limited"/> -->
    <Button
        android:text="Pay Loan"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:textColor="@color/cardview_light_background"
        android:background="@color/colorPrimaryDark"
        android:layout_marginRight="5dp"
        android:layout_height="wrap_content"
        android:id="@+id/pay_loan"/>
</LinearLayout>
</LinearLayout>
