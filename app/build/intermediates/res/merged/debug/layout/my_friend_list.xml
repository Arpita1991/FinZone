<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/design_layout_8"

    android:layout_height="wrap_content">
    <Views.RoundCircleView
        android:id="@+id/profile_image"
        android:visibility="gone"
        android:layout_width="30dp"
        android:layout_height="45dp" />
    <ImageView
        android:layout_width="40dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/ic_account_circle_24dp"
        android:tint="@color/LightGray"
        android:id="@+id/friend_image"
        />

    <TextView
        android:id="@+id/friend_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left|center"
        android:paddingLeft="12dp"
        android:text="TextViewTextViewTextView"
        android:textAllCaps="true"
        android:textColor="@color/LightGray"
        android:textSize="15dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:paddingRight="30dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_email_black_24dp"
                android:backgroundTint="@color/LightGray"
                android:tint="@color/LightGray" />

            <ImageButton
                android:id="@+id/unfriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/ic_delete_forever_black_24dp"
                android:backgroundTint="@color/redColor" />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>