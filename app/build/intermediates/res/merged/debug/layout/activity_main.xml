<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/homeColor"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nox.finzone.MainActivity">




  <ImageView
      android:id="@+id/app_name"
      android:textColor="#D0DDE3"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="100dp"
      android:src="@drawable/image3373"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="80dp"
        android:layout_height="match_parent">
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="100dp"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleColor="#ff0000"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleRoundedCorners="10dp"
            app:mrl_rippleInAdapter="false"
            app:mrl_rippleDuration="350"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleBackground="#FFFFFF"
            app:mrl_ripplePersistent="true"
        >
        <Button

            android:layout_gravity="center_horizontal"
            android:text="Log in"
            android:background="@drawable/button_design_1"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
</com.balysv.materialripple.MaterialRippleLayout>
        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_above="@+id/login"
            app:mrl_rippleOverlay="true"
            app:mrl_rippleColor="#ff0000"
            app:mrl_rippleAlpha="0.1"
            app:mrl_rippleDimension="10dp"
            app:mrl_rippleHover="true"
            app:mrl_rippleRoundedCorners="10dp"
            app:mrl_rippleInAdapter="false"
            app:mrl_rippleDuration="350"
            app:mrl_rippleFadeDuration="75"
            app:mrl_rippleDelayClick="true"
            app:mrl_rippleBackground="#FFFFFF"
            app:mrl_ripplePersistent="true"
            >
        <Button

            android:text="Create account"
            android:background="@drawable/button_design_2"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

             />
        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>



</LinearLayout>
